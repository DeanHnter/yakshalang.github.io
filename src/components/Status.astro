---
interface Props {
	status: "done" | "in-progress" | "not-started";
}

const { status } = Astro.props;

let style;

if (status == "done") {
  style = "badge badge-success text-success-content";
} else if (status == "in-progress") {
  style = "badge badge-warning text-warning-content";
} else if (status == "not-started") {
  style = "badge badge-error text-error-content";
}
---

<div class="flex flex-col gap-0">
  <slot />
  <div class={`${style} text-xs tooltip tooltip-bottom select-none`} data-tip="current status"> {status} </span>
</div>

---
import Layout from '../layouts/Layout.astro';

const posts = await Astro.glob('./blog/*.md');
---

<Layout title="Yaksha | Blog">
    <div class="flex justify-center text-center gap-8 pt-16 pb-8 px-8 md:px-0">
        <div>
            <h1 class="font-mono text-xl my-auto md:text-3xl">Posts</h1>
            
            <div class="divide-y divide-dotted pt-4">
                {posts.map(post => 
                <a href={post.url} class="flex flex-col gap-2 py-4 group">
                    {post.frontmatter.id}
                    <h2 class="font-mono text-lg md:text-2xl group-hover:text-primary">{post.frontmatter.title}</h2>
                    <p class="font-mono text-sm md:text-base group-hover:text-secondary">{post.frontmatter.author}</p>
                </a>)}
            </div>
        </div>
	</div>
</Layout>
---
import Layout from '../layouts/Layout.astro';

const docs = await Astro.glob('./docs/*.mdx');
---

<Layout title="Yaksha | Blog">
    <div class="flex justify-center text-center gap-8 pt-16 pb-8 px-8 md:px-0">
        <div>
            <h1 class="font-mono text-xl my-auto md:text-3xl">Docs</h1>
            
            <div class="divide-y divide-dotted pt-4">
                {docs.map(doc => 
                <a href={doc.url} class="flex flex-col gap-2 py-4 group">
                    <h2 class="font-mono text-lg md:text-2xl group-hover:text-primary">{doc.frontmatter.title}</h2>
                </a>)}
            </div>
        </div>
	</div>
</Layout>